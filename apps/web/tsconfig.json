/* web app paths */
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@features/*": ["src/features/*"],
      "@quality/*": ["src/quality/*"],
      "@styles/*": ["srcstyles/*"],
      "@test/*": ["src/test/*"],
      "@core/*": ["../../packages/core/*"],
    },
    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
